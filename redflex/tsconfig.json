{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"baseUrl": "app/",
		"paths": {
			"@/*": ["app/*"],
			"@/components/*": ["components/*"],
			"@/ui/*": ["components/ui/*"],
			"@screens/*": ["components/screens/*"],

			"@/hooks/*": ["hooks/*"],
			"@/shared/*": ["shared/*"],
			"@/config/*": ["config/*"],
			"@/services/*": ["services/*"],
			"@/utils/*": ["utils/*"],
			"@/store/*": ["store/*"],
			"@/assets/*": ["assets/*"]
		}
	}
}
